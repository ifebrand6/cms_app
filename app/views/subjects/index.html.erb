<% @page_title = "Subjects"%>
	 <div class="header">


     <h2 class="title">subject</h2>
     <%= link_to("Back to MENU ", {:controller => 'access',:action => 'index'}, :class => 'back-link') %>
 </div>
                                <%= link_to("Add New Subjects ",{:action => 'new'}, :class => 'action new') %>
                                
	 <table class="listing" summary= "subject list">
                                    <div><%= pluralize(@subjects.size, 'subject') %> found </div>
                                    <tr class="header">
                                        <th>&nbsp;</th>
                                        <th>Subject</th>
                                    	<th>Visible</th>
                                    	<th>Pages</th>
                                    	<th>Action</th>
                                    
                                    </tr>
                                    <% @subjects.each do |subject| %>
                                
                                        <tr>
                                        	<td><%= subject.position %></td>
                                        	<td><%= subject.name %></td>
                                        	<td class="center"><%= status_tag(subject.visible) %></td>
                                        	<td class="center"><%= subject.pages.size %></td>
                                            <td class="action">
    <%= link_to( "View Pages",{:controller => 'pages',:subject_id => subject.id}, :class => 'action edit' )%>
	<%= link_to( "Show",{:action => 'show',:id => subject.id}, :class => 'action edit' )%>
	<%= link_to "Edit",{:action => 'edit',:id => subject.id}, :class => 'action edit' %>
	<%= link_to "Delete", {:action => 'delete',:id => subject.id}, :class => 'action delete' %></td>
                                        </tr>
                                       
                                         <% end %>
                                </table>
                                </div>
                                   