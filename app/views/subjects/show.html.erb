<% @page_title = "Subjects detail" %>
 <%= link_to("<< Back to index", {:action =>'index'}, :class => 'back-link') %>

 <div class="subjects show">
 	<h2>Show subjects</h2>
 	<table sumarry="subject detail view">
 		<tr>
 			<th>Name</th>
 			<td><%= @subject.name %></td>
 		</tr>
 		<tr>
 			<th>Position</th>
 			<td><%= @subject.position %></td>
 		</tr>
 		<tr>
 			<th>Visible</th>
 			<td><%= @subject.visible ? 'Yes!' : 'Not quite' %></td>
 		</tr>
 		<tr>
 			<th>Created</th>
 			<td><%= @subject.created_at %></td>
 		</tr>
 		<tr>
 			<th>Upadate</th>
 			<td><%= @subject.updated_at %></td>
 		</tr>
 	</table>