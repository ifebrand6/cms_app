<% @page_title = "Login" %>

<div class="login">
<%= form_tag(:action => 'attempt_login') do %>
<table>
	<tr>
		<td><%= label_tag(:username) %></td>
		<td> <%= text_field_tag "username", (:username), :class => 'form-control '%></td>
	</tr>
	<tr>
		<td><%= label_tag(:password) %></td>
		<td> <%= password_field_tag "password", (:password), :class => 'form-control' %></td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td><%= submit_tag("login") %>  </td>
	</tr>
</table>
<% end %>
</div>